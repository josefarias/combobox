<%= tag.style nonce: content_security_policy_nonce do %>
  form {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  input[type="submit"] {
    padding: 0.5rem;
  }
<% end %>

<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>

<%= form_with model: @user do |form| %>
  <%= form.combobox :visited_state_ids, State.all, label: "Visited states", multiselect_chip_src: state_chips_path %>
  <%= form.submit %>
<% end %>
