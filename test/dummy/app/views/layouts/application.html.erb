<!DOCTYPE html>
<html>
  <head>
    <title>Dummy</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%# stylesheet_link_tag "preflight", "data-turbo-track": "reload" %>

    <%= combobox_style_tag %>
    <%= javascript_importmap_tags %>

    <style>
      @import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;700&display=swap');

      body { font-family: 'Inter', sans-serif; }

      .container {
        display: flex;
        align-items: flex-start;
      }
      .container aside {
        background-color: #efefef;
        margin-right: 2rem;
      }
      .container aside.empty {
        display: none;
      }

      @media (max-width: 600px) {
        .container aside {
          display: none;
        }
      }
    </style>
  </head>

  <body>
    <section class="container">
      <aside class="<%= 'empty' unless aside_nav? %>">
        <%= render "#{controller_name}/nav" if aside_nav? %>
      </aside>
      <main>
        <div id="clickable" style="width: 10px; height: 10px; background-color: red; margin-bottom: 10px;"></div>
        <%= yield %>
      </main>
    </section>
  </body>
</html>
